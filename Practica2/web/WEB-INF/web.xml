<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>ValidacionUsuarioLogeado</filter-name>
        <filter-class>practica2.Filters.ValidacionUsuarioLogeado</filter-class>
    </filter>
    <filter>
        <filter-name>ContadorPeticion</filter-name>
        <filter-class>practica2.Filters.ContadorPeticion</filter-class>
        <init-param>
            <param-name>urlActivado</param-name>
            <param-value>0</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>ValidacionUsuarioLogeado</filter-name>
        <url-pattern>/login.html</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ContadorPeticion</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>ValidacionUsuario</servlet-name>
        <servlet-class>practica2.Servlets.ValidacionUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidacionUsuarioCookie</servlet-name>
        <servlet-class>practica2.Servlets.ValidacionUsuarioCookie</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VisualizarCookie</servlet-name>
        <servlet-class>practica2.Servlets.VisualizarCookie</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MostrarInfoSesion</servlet-name>
        <servlet-class>practica2.Servlets.MostrarInfoSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubirArchivo</servlet-name>
        <servlet-class>practica2.Servlets.SubirArchivo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ValidacionUsuario</servlet-name>
        <url-pattern>/ValidacionUsuario</url-pattern>
        <url-pattern>/validarUsuario</url-pattern>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidacionUsuarioCookie</servlet-name>
        <url-pattern>/ValidacionUsuarioCookie</url-pattern>
        <url-pattern>/validarcookie</url-pattern>
        <url-pattern>/validacookie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VisualizarCookie</servlet-name>
        <url-pattern>/VisualizarCookie</url-pattern>
        <url-pattern>/vercookie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MostrarInfoSesion</servlet-name>
        <url-pattern>/MostrarInfoSesion</url-pattern>
        <url-pattern>/verinfo</url-pattern>
        <url-pattern>/mostrarinfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubirArchivo</servlet-name>
        <url-pattern>/SubirArchivo</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
